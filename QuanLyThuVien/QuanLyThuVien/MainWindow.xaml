        <Button Content="Quản lý mượn trả" HorizontalAlignment="Left" Margin="0,102,0,0" VerticalAlignment="Top" Height="25" Width="132"/>
        <Button Content="Tìm kiếm" HorizontalAlignment="Left" Margin="0,127,0,0" VerticalAlignment="Top" Width="132"/>
        <Button Content="Lập báo cáo" HorizontalAlignment="Left" Margin="0,147,0,0" VerticalAlignment="Top" Width="132"/>
        <Button Content="Thay đổi quy định" HorizontalAlignment="Left" Margin="0,167,0,0" VerticalAlignment="Top" Width="132"/>
        <Label Content="Quản lý thư viện" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
