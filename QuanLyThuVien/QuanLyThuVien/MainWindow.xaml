        <Button x:Name="btQuanLyDocGia" Content="Quản lý độc giả" HorizontalAlignment="Left" Margin="0,55,0,0" VerticalAlignment="Top" Height="25" Width="132" Click="btQuanLyDocGia_Click"/>
